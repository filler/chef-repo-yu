# User which runs Apache ServiceMix
KARAF_USER="appa"

# Where Apache ServiceMix lives
KARAF_HOME="<%= node[:apache_servicemix][:servicemix_home] %>"
KARAF_BASE="<%= node[:apache_servicemix][:servicemix_home] %>"
KARAF_DATA="<%= node[:apache_servicemix][:servicemix_home] %>/data"
KARAF_INSTANCEDIR="<%= node[:apache_servicemix][:servicemix_home] %>/instances"

# Where JVM is installed
JAVA_HOME="<%= node[:java][:java_home] %>"

# Memory settings for JVM
MAXPERM="<%= node[:apache_servicemix][:maxperm] %>"
MAXHEAP="<%= node[:apache_servicemix][:maxheap] %>"
MINHEAP="<%= node[:apache_servicemix][:minheap] %>"

# Additional options for JAVA
ADDLJVAOPTS="<%= @java_opts.join(' ') %>"

# Enable the parent
PARENT_ENABLED=<%= node[:apache_servicemix][:parent_enabled] %>

# Start instances
# This will start the following (but won't create them!)
KARAF_INSTANCES=( <%= @instances.join(' ') %> )