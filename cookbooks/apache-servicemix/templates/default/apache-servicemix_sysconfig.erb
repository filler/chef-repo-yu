# User which runs Apache ServiceMix
KARAF_USER="jbossa"

# Where Apache ServiceMix lives
KARAF_HOME="/usr/local/apache-servicemix"
KARAF_BASE="/usr/local/apache-servicemix"
KARAF_DATA="/usr/local/apache-servicemix/data"

# Where JVM is installed
JAVA_HOME="/usr/local/jdk1.6.0_21"

# Memory settings for JVM
MAXPERM="256M"
MAXHEAP="2048m"
MINHEAP="2048m"

# Additional options for JAVA
ADDLJVAOPTS=""

# Start instances
# This will start the following (but won't create them!)
KARAF_INSTANCES=( )